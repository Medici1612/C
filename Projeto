    	printf("\t|");
    		printf("\t\t\t\t\t\t\t\t\t\t              |");
    	printf("\n");
    		printf("\t|");
    			printf("\t\t\t\t\t\t\t\t\t\t              |");
    		printf("\n");
    			printf("\t|\t");
    			printf("\n");
	    
	printf("\t|");
    printf("  1-CRIAÇÃO DE PERSONAGEM\n");
	printf("\t|");
	printf("\n\n\n2-LISTA DE PERSONAGENS\n");
    int opc,voltar=0;
