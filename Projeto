int main() {
	setlocale(LC_ALL, "");
  int ver = 0;
  
  printf("\t\t\t\t\t\tLIGHT SOULS\n");
  
  while(ver==0) {
   	
	//tela menu
    	printf("      \t|");
    	printf("=============================================================================================");
    	printf("|");
    	printf("\n");
    		printf("\t|");
